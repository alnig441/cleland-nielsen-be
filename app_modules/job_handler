const events = require('events');
const fileHandler = require('./file_handler');

const jobHandler = function() {

    events.eventEmitter.call(this);

    this.files = [];

    this.fileHandler = fileHandler;

    return this;
}

jobHandler.prototype = new events.eventEmitter();

jobHandler.prototype.getFiles = function () {

    this.fileHandler(setFiles)

    console.lot(this.files);

    function setFiles(files) {
        this.files = files;
        this.emit('done', files);
    }

    return this;
}

module.exports = jobHandler;
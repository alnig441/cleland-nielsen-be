extends layout

block content
    main#results
        h1= endpoint + ' results'
        - var result= docs;

        - if (result.total)
            div.results
                span.level0= '<'+ endpoint +'ModelResults>'
                    include ./partials/photo.jade
                - if (docs.total && docs.total.toString() != 'NaN')
                    span.level1= '<total>'
                        p= docs.total
                        span.no-margin='</total>'
                - if (docs.limit && docs.limit.toString() != 'NaN')
                    span.level1= '<limit>'
                        p= docs.limit
                        span.no-margin= '</limit>'
                - if (docs.page && docs.page.toString() != 'NaN')
                    span.level1= '<page>'
                        p= docs.page
                        span.no-margin= '</page>'
                - if (docs.pages && docs.pages.toString() != 'NaN')
                    span.level1= '<pages>'
                        p= docs.pages
                        span.no-margin= '</pages>'
                span.level0= '</'+ endpoint +'ModelResults>'
        - else
            span= 'no results!'